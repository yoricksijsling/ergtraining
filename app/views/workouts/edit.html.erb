<h1>Editing workout</h1>

<%= form_for(@workout) do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<%= f.fields_for :member_workouts do |fmw| %>
		<div class='member_workout'>
			<%= fmw.object.member.name %>
			<%= fmw.fields_for :intervals do |fi| %>
				<%= fi.text_field :pace %>
				<%= fi.text_field :hravg %>
			<% end %>
		</div>
	<% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

