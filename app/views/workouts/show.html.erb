<h1><%= @workout.title %> op <%= @workout.date %></h1>

<p id="notice"><%= notice %></p>

<%= form_for [@team, @workout] do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize @workout.errors.count, "error" %> prohibited this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<% @workout.team.members.each do |member|
		member_workout = @workout.get_for member
		%>
		<div class='member'>
			<div class='member_name'><%= member.name %> <% if member_workout %><%= Pace.to_s(member_workout.intervals_average :pace_as_float) %> @ <%= member_workout.intervals_average :hravg %><% end %></div>
			
			<div class='member_workout ajaxdiv' data-ajaxurl='<%= workout_get_for_member_path @team, @workout, member%>'>
				<% if member_workout %>
					<%= render :partial => "workouts/edit_member_workout", :locals => { :member_workout => member_workout } %>
				<% else %>
					<div class='no_data_yet'><a class='add_member_workout' href='#'>Gegevens invoeren</a></div>
			<% end %>
			</div>
			
		</div>
	<% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', @team %>
