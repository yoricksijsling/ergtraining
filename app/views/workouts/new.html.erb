<h3>Nieuwe training</h3>

<%= form_for [@team, @workout] do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize @workout.errors.count, "error" %> prohibited this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Titel (bv. 2x 20', 3x6x1 of 20'-test)" %><br />
    <%= f.text_field :title, "data-workout_config_url" => workout_config_for_url %>
		<div class='workout_config_preview'></div>
  </div>
  <div class="field">
    <%= f.label :date, "Datum" %><br />
    <%= f.date_select :date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
